<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/darker_gray">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Logo atau Gambar -->
        <ImageView
            android:id="@+id/imgLogo"
            android:layout_width="400dp"
            android:layout_height="200dp"
            android:contentDescription="Logo"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="24dp"
            android:background="@drawable/about"/>

        <!-- Judul -->
        <TextView
            android:id="@+id/tvAboutTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tentang Aplikasi"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#FF5722"
            app:layout_constraintTop_toBottomOf="@id/imgLogo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp" />

        <!-- Deskripsi -->
        <TextView
            android:id="@+id/tvAboutDescription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Didirikan dengan semangat memperkenalkan kekayaan kuliner Nusantara kepada setiap lapisan masyarakat, perusahaan kami hadir sebagai surga cita rasa yang menyajikan beragam hidangan autentik mulai dari gurihnya nasi kuning dan lezatnya nasi goreng, hingga kehangatan soto dan keotentikan nasi Padang yang kaya rempah; tak hanya itu, setiap mangkuk bakso dan mie ayam yang kami hidangkan dibuat dengan racikan khas penuh rasa, ditutup sempurna dengan ikan bakar yang dibakar langsung dengan bumbu tradisional hingga meresap ke dalam dagingnyaâ€”semua diracik dari bahan pilihan, diolah oleh tangan-tangan berpengalaman, dan disajikan untuk memuaskan rindu akan masakan rumahan yang tak tergantikan."
            android:textSize="16sp"
            android:textStyle="italic|bold"
            android:textColor="#333333"
            android:lineSpacingExtra="4dp"
            app:layout_constraintTop_toBottomOf="@id/tvAboutTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
