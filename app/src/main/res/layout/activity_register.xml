<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/b1"
    tools:context=".RegisterActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="210dp"
        android:layout_marginTop="145dp"
        android:text="REGISTER"
        android:textColor="@color/grey"
        android:textSize="35sp"
        android:textStyle="bold" />

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="110dp"
        app:boxStrokeColor="#FF5722"
        app:boxStrokeWidthFocused="4dp"
        app:hintTextColor="#FF5722"
        app:startIconDrawable="@drawable/baseline_person_24"
        app:startIconTint="@color/teal_700">

        <!-- Menampilkan teks di dalam input -->

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:text="Username" />
    </com.google.android.material.textfield.TextInputLayout>

    <!--  password  -->

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="10dp"
        android:hint="Password"
        app:boxStrokeColor="#FF5722"
        app:boxStrokeWidthFocused="4dp"
        app:hintTextColor="#FF5722"
        app:startIconDrawable="@drawable/baseline_security_24"
        app:startIconTint="@color/teal_700"
        app:endIconMode="password_toggle"
        app:endIconTint="@color/red">

        <!-- Menampilkan teks di dalam input -->
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:text="Password" />
    </com.google.android.material.textfield.TextInputLayout>


    <!-- Untuk konfirmasi password         -->

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="10dp"
        android:hint="Re-Password"
        app:boxStrokeColor="#FF5722"
        app:boxStrokeWidthFocused="4dp"
        app:hintTextColor="#FF5722"
        app:startIconDrawable="@drawable/baseline_https_24"
        app:startIconTint="@color/teal_700"
        app:endIconMode="password_toggle"
        app:endIconTint="@color/red">

        <!-- Menampilkan teks di dalam input -->

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:text="Password" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:layout_width="180dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:layout_marginTop="55dp"
        android:text="REGISTER"
        android:background="@drawable/button"
        android:textColor="@color/white"
        android:textSize="19sp"
        android:textStyle="bold"/>

</LinearLayout>